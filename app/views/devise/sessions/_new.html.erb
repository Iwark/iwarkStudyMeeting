<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="email">メアド  <%= f.email_field :email, :autofocus => true %></div>
  <div class="password">パスワード  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember_me"><%= f.check_box :remember_me %> もう２度とログインをさせるんじゃねぇ</div>
  <% end -%>

  <div class="login"><%= f.submit "進んだら戻れない道へ" %></div>
<% end %>

